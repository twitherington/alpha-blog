<% obj.each do |a| %>
    <div class='row'>
      <div class='col-xs-8 col-xs-offset-2'>
        <div class='well well-lg'>
          <div class='article-title'>
            <%= link_to a.title, article_path(a)%>
          </div>
          <div class='article-body'>
            <%= truncate(a.description, length: 100) %>
            <div class='article-meta-details'>
              <small>Created by: <%= a.user.username if a.user %>,
                <%= time_ago_in_words(a.created_at) %> ago,
                last updated: <%= time_ago_in_words(a.updated_at) %> ago</small>
            </div>
            <% if logged_in? and (current_user == a.user) || current_user.admin? %>
              <div class='article-actions'>
                <%= link_to 'Edit', edit_article_path(a), class: 'btn btn-xs btn-primary' %>
                <%= link_to 'Delete', article_path(a),
                            method: :delete,
                            data: {confirm: 'Are you sure you want to delete the article?'},
                            class: 'btn btn-xs btn-danger' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<% end %>
